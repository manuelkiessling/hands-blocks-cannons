{
  "name": "@block-game/server",
  "version": "1.0.0",
  "type": "module",
  "description": "WebSocket game server for two-player block manipulation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts src/bot/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "bot": "tsx src/bot/index.ts",
    "bot:dist": "node dist/bot/index.js",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "npm run typecheck && npm run check && npm run test"
  },
  "dependencies": {
    "@block-game/shared": "*",
    "@gesture-app/blocks-cannons": "*",
    "ws": "^8.18.0",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^24.0.0",
    "@types/ws": "^8.18.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
