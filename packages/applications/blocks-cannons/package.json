{
  "name": "@gesture-app/blocks-cannons",
  "version": "1.0.0",
  "type": "module",
  "description": "Blocks & Cannons - A two-player competitive hand-gesture game",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared/index.js",
      "types": "./dist/shared/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/shared/index.ts src/server/index.ts src/server/server.ts src/server/bot/index.ts --format esm --dts --clean",
    "build:client": "vite build --config client/vite.config.ts",
    "dev": "npm run dev:server & npm run dev:client",
    "dev:server": "tsx watch src/server/server.ts",
    "dev:client": "vite --config client/vite.config.ts",
    "dev:bot": "tsx src/server/bot/index.ts",
    "start": "node dist/server/server.js",
    "start:bot": "node dist/server/bot/index.js",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:client": "vitest run --config client/vitest.config.ts"
  },
  "dependencies": {
    "@gesture-app/framework-client": "^1.0.0",
    "@gesture-app/framework-input": "^1.0.0",
    "@gesture-app/framework-protocol": "^1.0.0",
    "@mediapipe/camera_utils": "^0.3.1675466862",
    "@mediapipe/hands": "^0.4.1675469240",
    "three": "^0.182.0",
    "ws": "^8.18.0",
    "yaml": "^2.8.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@gesture-app/framework-build": "^1.0.0",
    "@gesture-app/framework-testing": "^1.0.0",
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^24.0.0",
    "@types/three": "^0.182.0",
    "@types/ws": "^8.18.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vite-plugin-static-copy": "^2.3.0",
    "vitest": "^4.0.0"
  }
}
