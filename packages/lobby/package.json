{
  "name": "@block-game/lobby",
  "version": "1.0.0",
  "type": "module",
  "description": "Game lobby for creating and managing block game sessions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run build:frontend && npm run build:server",
    "build:server": "tsup src/index.ts --format esm --dts",
    "build:frontend": "vite build",
    "start": "node dist/index.js",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^24.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
