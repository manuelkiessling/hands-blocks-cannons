{
  "name": "@gesture-app/framework-testing",
  "version": "1.0.0",
  "type": "module",
  "description": "Testing utilities for gesture apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@gesture-app/framework-protocol": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^24.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "vitest": "^4.0.0"
  }
}
