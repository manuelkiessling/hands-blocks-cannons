{
  "name": "@gesture-app/framework-build",
  "version": "1.0.0",
  "type": "module",
  "description": "Build utilities and shared configurations for gesture apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "vite": "^6.0.0",
    "vite-plugin-static-copy": "^2.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^24.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "vite": "^6.0.0"
  }
}
